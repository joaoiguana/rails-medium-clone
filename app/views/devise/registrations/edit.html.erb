<div class="max-w-2xl mx-auto mt-8">
  <div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-2xl font-bold">Edit Profile</h2>
    </div>

    <div class="p-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :username,
              class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
        </div>

        <div class="field">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email",
              class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
        </div>

        <div class="field">
          <%= f.label :bio, "About me", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_area :bio, rows: 4,
              class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-600">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
          <p class="mt-1 text-sm text-gray-500">Leave blank if you don't want to change it</p>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500" %>
          <p class="mt-1 text-sm text-gray-500">We need your current password to confirm your changes</p>
        </div>

        <div class="flex justify-between items-center pt-4">
          <div class="actions">
            <%= f.submit "Update Profile",
                class: "bg-green-600 text-white py-2 px-4 rounded-full hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-8 bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium">Delete Account</h3>
    </div>

    <div class="p-6">
      <p class="text-gray-600 mb-4">Once you delete your account, all of your content will be permanently deleted. This action cannot be undone.</p>

      <%= button_to "Delete my account", registration_path(resource_name),
          data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." },
          method: :delete,
          class: "bg-red-600 text-white py-2 px-4 rounded-full hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" %>
    </div>
  </div>
</div>
