<%= form_with(model: article, class: "space-y-6") do |f| %>
  <% if article.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
      <h2 class="text-red-800 font-medium"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full rounded-lg border-gray-300" %>
  </div>

  <div>
    <%= f.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.rich_text_area :content, class: "w-full rounded-lg border-gray-300" %>
  </div>

  <div class="flex items-center space-x-2">
    <%= f.check_box :published, class: "rounded border-gray-300" %>
    <%= f.label :published, "Publish now", class: "text-sm text-gray-700" %>
  </div>

  <div>
    <%= f.submit class: "bg-green-600 text-white px-6 py-2 rounded-full hover:bg-green-700" %>
  </div>
